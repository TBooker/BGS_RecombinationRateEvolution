initialize() {
	
	defineConstant("N", 1000);  // pop size
	defineConstant("L", 1e7);    // total chromosome length
	initializeTreeSeq();
	initializeMutationRate(1e-7);
	

	recRates = c(6.25e-07,0.5 ,9e-07,0.5 , 1.6e-06,0.5 , 2.025e-06,0.5 , 2.5e-06,0.5 , 2.5e-06,0.5 , 3.025e-06,0.5 , 3.6e-06,0.5 , 4.9e-06 ,0.5 ,5.625e-06);
	
	
	initializeRecombinationRate(recRates, sort(c((c(seq(1,10)*1000000)-1) , (c(seq(1,9)*1000000)))));
	
	
	initializeMutationType("m2", 0.5, "g", -0.1, 0.1);
	initializeGenomicElementType("g2", m2, 1.0);
	
	initializeGenomicElement(g2, 0, L-1);
}
1 {
	sim.addSubpop("p1", N);

}
1:100000 {
}
30000 {
	sim.treeSeqOutput("range0.111_recombination_regime_1."+REP+".trees");
}

30001 late() {
	// Jack up the recombination rate 10-fold
	
	
	recRates = c(6.25e-07,0.5 ,9e-07,0.5 , 1.6e-06,0.5 , 2.025e-06,0.5 , 2.5e-06,0.5 , 2.5e-06,0.5 , 3.025e-06,0.5 , 3.6e-06,0.5 , 4.9e-06 ,0.5 ,5.625e-06);
	
	sim.chromosome.setRecombinationRate(rev(recRates), sort(c((c(seq(1,10)*1000000)-1) , (c(seq(1,9)*1000000)))));
	}

30001:40000 late(){
	if (sim.generation % 1000 == 0){
		sim.treeSeqOutput("range0.111_recombination_regime_2.gen"+sim.generation +".rep"+REP+".trees");
	
	}
}
